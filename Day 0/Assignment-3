<!--
Write a JavaScript program to get the current date.
Expected Output :
mm-dd-yyyy, mm/dd/yyyy or dd-mm-yyyy, dd/mm/yyyy
-->

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment-3</title>
</head>
<body>
    <p id="1"></p>
    <p id='2'></p>
    <p id='3'></p>
    <p id='4'></p>
    <script>
        var today= new Date();
        var dd= today.getDate();
        var mm= today.getMonth() +1;
        var yy= today.getFullYear();
        
        document.getElementById('1').innerHTML = mm+'-'+dd+'-'+yy;
        document.getElementById('2').innerHTML = mm+'/'+dd+'/'+yy;
        document.getElementById('3').innerHTML = dd+'-'+mm+'-'+yy;
        document.getElementById('4').innerHTML = dd+'/'+mm+'/'+yy;

    </script>
</body>
</html>
